<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jim.api.entities.blog.BlogArticlesEntity" table="articles" schema="blog">
        <id name="id">
            <column name="id" sql-type="bigint(30) unsigned"/>
        </id>
        <property name="title">
            <column name="title" sql-type="varchar(255)"/>
        </property>
        <property name="content">
            <column name="content" sql-type="text"/>
        </property>
        <property name="background">
            <column name="background" sql-type="varchar(300)" length="300"/>
        </property>
        <property name="userId">
            <column name="user_id" sql-type="bigint(30) unsigned"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(32)" length="32"/>
        </property>
        <property name="sticky">
            <column name="sticky" sql-type="int(10)"/>
        </property>
        <property name="rating">
            <column name="rating" sql-type="tinyint(1)"/>
        </property>
        <property name="parent">
            <column name="parent" sql-type="bigint(30)"/>
        </property>
        <property name="commentStatus">
            <column name="comment_status" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="commentCount">
            <column name="comment_count" sql-type="int(10)"/>
        </property>
        <property name="createdAt">
            <column name="created_at" sql-type="datetime"/>
        </property>
        <property name="updatedAt">
            <column name="updated_at" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>