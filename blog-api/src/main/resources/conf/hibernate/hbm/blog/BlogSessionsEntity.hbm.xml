<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jim.api.entities.blog.BlogSessionsEntity" table="sessions" schema="blog">
        <property name="id">
            <column name="id" sql-type="varchar(255)"/>
        </property>
        <property name="userId">
            <column name="user_id" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="ipAddress">
            <column name="ip_address" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="userAgent">
            <column name="user_agent" sql-type="text" not-null="true"/>
        </property>
        <property name="payload">
            <column name="payload" sql-type="text"/>
        </property>
        <property name="lastActivity">
            <column name="last_activity" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>