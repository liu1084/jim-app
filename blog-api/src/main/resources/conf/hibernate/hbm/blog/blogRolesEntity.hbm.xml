<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jim.api.entities.blog.BlogRolesEntity" table="roles" schema="blog">
        <id name="id">
            <column name="id" sql-type="int(10) unsigned"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="status">
            <column name="status" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="createAt">
            <column name="create_at" sql-type="datetime"/>
        </property>
        <property name="updateAt">
            <column name="update_at" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>