<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jim.api.entities.blog.BlogArticlesMetadataEntity" table="articles_metadata" schema="blog">
        <id name="id">
            <column name="id" sql-type="bigint(30) unsigned"/>
        </id>
        <property name="articleId">
            <column name="article_id" sql-type="bigint(30) unsigned"/>
        </property>
        <property name="key">
            <column name="key" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="value">
            <column name="value" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>